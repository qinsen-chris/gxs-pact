<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gclfax.modules.pact.dao.PactRecordDao" >
  <resultMap id="BaseResultMap" type="com.gclfax.modules.pact.entity.PactRecordEntity" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="platform" property="platform" jdbcType="VARCHAR" />
    <result column="file_sign" property="fileSign" jdbcType="VARCHAR" />
    <result column="pact_path" property="pactPath" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="version" property="version" jdbcType="INTEGER" />
  </resultMap>

  <insert id="save" parameterType="com.gclfax.modules.pact.entity.PactRecordEntity" useGeneratedKeys="true" keyProperty="id" >
    insert into t_pact_record (platform, file_sign, pact_path,create_time)
    values (#{platform}, #{fileSign}, #{pactPath},#{createTime})
  </insert>
  <select id="queryPactPath" resultType="map">
    select pact_path as pactPath
    from t_pact_record
    where platform = #{platform} and file_sign = #{fileSign}
  </select>
</mapper>